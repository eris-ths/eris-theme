  "tokenColors": [
    // === Comments â€” warm muted purple ===
    {
      "scope": "comment",
      "settings": {
        "foreground": "#786878",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "comment.block.documentation",
        "comment.block.documentation storage.type",
        "comment.block.documentation entity.name.type",
        "comment.block.documentation variable.other"
      ],
      "settings": {
        "foreground": "#887080",
        "fontStyle": "italic"
      }
    },
    // === Strings â€” rosy warmth ===
    {
      "scope": "string",
      "settings": {
        "foreground": "#FF8A9E"
      }
    },
    // === Numbers â€” soft amber ===
    {
      "scope": [
        "constant.numeric",
        "constant.language"
      ],
      "settings": {
        "foreground": "#ECAD78"
      }
    },
    // === Keywords â€” rosy crimson will ===
    {
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#E85A71",
        "fontStyle": "bold"
      }
    },
    // === Functions â€” warm silver ===
    {
      "scope": [
        "entity.name.function",
        "support.function"
      ],
      "settings": {
        "foreground": "#D8D8D8"
      }
    },
    // === Variables â€” light warm ===
    {
      "scope": "variable",
      "settings": {
        "foreground": "#E8E8E8"
      }
    },
    // === Parameters â€” lavender silver ===
    {
      "scope": [
        "variable.parameter",
        "meta.parameter"
      ],
      "settings": {
        "foreground": "#C0B0C8"
      }
    },
    // === Classes / Types â€” rosy crimson blueprint ===
    {
      "scope": [
        "entity.name.class",
        "entity.name.type",
        "support.class"
      ],
      "settings": {
        "foreground": "#E85A71",
        "fontStyle": "underline"
      }
    },
    // === Interfaces / Type aliases â€” crimson abstract ===
    {
      "scope": [
        "entity.name.type.interface",
        "entity.name.type.alias"
      ],
      "settings": {
        "foreground": "#E85A71",
        "fontStyle": "italic"
      }
    },
    // === HTML Tags ===
    {
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#E85A71"
      }
    },
    // === HTML Attributes ===
    {
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "#D0D0D0",
        "fontStyle": "italic"
      }
    },
    // === Imports / Exports â€” warm purple ===
    {
      "scope": [
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from"
      ],
      "settings": {
        "foreground": "#A080A0",
        "fontStyle": ""
      }
    },
    // === Module names ===
    {
      "scope": [
        "entity.name.type.module",
        "entity.name.type.namespace"
      ],
      "settings": {
        "foreground": "#B898B8"
      }
    },
    // === Decorators â€” warm red italic ===
    {
      "scope": [
        "meta.decorator",
        "punctuation.decorator"
      ],
      "settings": {
        "foreground": "#FF8A9E",
        "fontStyle": "italic"
      }
    },
    // === Template expressions â€” rosy crimson ===
    {
      "scope": [
        "punctuation.definition.template-expression",
        "meta.template.expression"
      ],
      "settings": {
        "foreground": "#E85A71"
      }
    },
    // === Property access â€” warm silver ===
    {
      "scope": [
        "variable.other.property",
        "variable.other.object.property",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#D0D0D0"
      }
    },
    // === Punctuation â€” soft muted ===
    {
      "scope": [
        "punctuation",
        "meta.brace"
      ],
      "settings": {
        "foreground": "#909090"
      }
    },
    // === Operators ===
    {
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#D0D0D0",
        "fontStyle": ""
      }
    },
    // === Enum members â€” soft amber ===
    {
      "scope": [
        "variable.other.enummember",
        "constant.other.enum"
      ],
      "settings": {
        "foreground": "#ECAD78"
      }
    },
    // === this / self â€” rosy crimson italic ===
    {
      "scope": [
        "variable.language.this",
        "variable.language.self",
        "variable.parameter.function.language.special.self",
        "variable.parameter.function.language.special.cls"
      ],
      "settings": {
        "foreground": "#E85A71",
        "fontStyle": "italic"
      }
    },
    // === Markdown ===
    {
      "scope": "markup.heading",
      "settings": {
        "foreground": "#E85A71",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "markup.underline.link",
        "string.other.link"
      ],
      "settings": {
        "foreground": "#A080A0"
      }
    },
    {
      "scope": "markup.fenced_code.block",
      "settings": {
        "foreground": "#D0D0D0"
      }
    },
    {
      "scope": "markup.inline.raw",
      "settings": {
        "foreground": "#FF8A9E"
      }
    },
    // === JSON keys ===
    {
      "scope": "support.type.property-name.json",
      "settings": {
        "foreground": "#E85A71"
      }
    },
    // === YAML keys ===
    {
      "scope": "entity.name.tag.yaml",
      "settings": {
        "foreground": "#E85A71"
      }
    },
    // === Regex ===
    {
      "scope": [
        "string.regexp",
        "constant.other.character-class.regexp"
      ],
      "settings": {
        "foreground": "#E85A71"
      }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "parameter": "#C0B0C8",
    "property": "#D0D0D0",
    "interface": {
      "foreground": "#E85A71",
      "italic": true
    },
    "typeParameter": "#ECAD78",
    "enumMember": "#ECAD78"
  }
}
