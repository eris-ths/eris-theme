  "tokenColors": [
    // === Comments â€” whispers from the dark ===
    {
      "scope": "comment",
      "settings": {
        "foreground": "#6b5065",
        "fontStyle": "italic"
      }
    },
    // === Documentation comments â€” more visible whispers ===
    {
      "scope": [
        "comment.block.documentation",
        "comment.block.javadoc"
      ],
      "settings": {
        "foreground": "#7a6075",
        "fontStyle": "italic"
      }
    },
    // === Strings ===
    {
      "scope": "string",
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    // === Numbers â€” warm amber glow in the void ===
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#E8A068"
      }
    },
    // === Keywords ===
    {
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "bold"
      }
    },
    // === Functions â€” bright silver structures ===
    {
      "scope": [
        "entity.name.function",
        "support.function"
      ],
      "settings": {
        "foreground": "#D4D4D4"
      }
    },
    // === Parameters â€” muted lavender-silver ===
    {
      "scope": [
        "variable.parameter",
        "meta.parameter"
      ],
      "settings": {
        "foreground": "#B0A0B8"
      }
    },
    // === Decorators â€” attention markers ===
    {
      "scope": [
        "meta.decorator",
        "punctuation.decorator"
      ],
      "settings": {
        "foreground": "#FF6B6B",
        "fontStyle": "italic"
      }
    },
    // === Imports/Modules â€” pathways ===
    {
      "scope": [
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from"
      ],
      "settings": {
        "foreground": "#8B6B8B"
      }
    },
    // === Module names ===
    {
      "scope": [
        "entity.name.import",
        "entity.name.package"
      ],
      "settings": {
        "foreground": "#A88BA8"
      }
    },
    // === Variables ===
    {
      "scope": "variable",
      "settings": {
        "foreground": "#E0E0E0"
      }
    },
    // === Classes ===
    {
      "scope": [
        "entity.name.class",
        "entity.name.type",
        "support.class"
      ],
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "underline"
      }
    },
    // === Operators ===
    {
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#C0C0C0"
      }
    },
    // === Punctuation ===
    {
      "scope": "punctuation",
      "settings": {
        "foreground": "#808080"
      }
    },
    // === Tags (HTML/XML) ===
    {
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#DC143C"
      }
    },
    // === Attributes ===
    {
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "#C0C0C0",
        "fontStyle": "italic"
      }
    },
    // === Constants ===
    {
      "scope": [
        "constant.language",
        "constant.other"
      ],
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    // === Type Parameters ===
    {
      "scope": "entity.name.type.parameter",
      "settings": {
        "foreground": "#C0C0C0",
        "fontStyle": "italic"
      }
    },
    // === Markdown ===
    {
      "scope": "markup.heading",
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "foreground": "#C0C0C0",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "foreground": "#C0C0C0",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.inline.raw",
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    // === JSON Keys ===
    {
      "scope": "support.type.property-name.json",
      "settings": {
        "foreground": "#DC143C"
      }
    },
    // === YAML Keys ===
    {
      "scope": "entity.name.tag.yaml",
      "settings": {
        "foreground": "#DC143C"
      }
    },
    // === Regex ===
    {
      "scope": "string.regexp",
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    // === Invalid ===
    {
      "scope": "invalid",
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "underline wavy"
      }
    },
    // === Rust specific ===
    {
      "scope": "entity.name.lifetime.rust",
      "settings": {
        "foreground": "#FF6B6B",
        "fontStyle": "italic"
      }
    },
    // === TypeScript/JavaScript ===
    {
      "scope": "variable.language.this",
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "italic"
      }
    },
    // === Template expressions â€” embedded will ===
    {
      "scope": [
        "punctuation.definition.template-expression",
        "meta.template.expression"
      ],
      "settings": {
        "foreground": "#DC143C"
      }
    },
    // === Property access â€” silver chains ===
    {
      "scope": "variable.other.property",
      "settings": {
        "foreground": "#C8C8C8"
      }
    },
    // === Interfaces/Types â€” crimson blueprints ===
    {
      "scope": [
        "entity.name.type.interface",
        "entity.name.type.alias"
      ],
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "italic"
      }
    },
    // === Enum members ===
    {
      "scope": "variable.other.enummember",
      "settings": {
        "foreground": "#E8A068"
      }
    },
    // === Python: self/cls ===
    {
      "scope": [
        "variable.language.special.self",
        "variable.language.special.cls"
      ],
      "settings": {
        "foreground": "#DC143C",
        "fontStyle": "italic"
      }
    },
    // === Markdown links ===
    {
      "scope": "markup.underline.link",
      "settings": {
        "foreground": "#8B6B8B"
      }
    },
    // === Markdown code blocks ===
    {
      "scope": "markup.fenced_code.block",
      "settings": {
        "foreground": "#C0C0C0"
      }
    }
  ]
}
